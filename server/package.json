    "jest": "^29.7.0",
    "jwt-decode": "^4.0.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.3",
    "cpx": "^1.5.0"
  },
  "dependencies": {
    "@apollo/server": "^4.10.2",
    "@apollo/server-plugin-landing-page-graphql-playground": "^4.0.1",
    "@types/cors": "^2.8.17",
