{
    "compilerOptions": {
        "target": "es2019",
        "lib": ["es2019", "dom"],
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",

        "outDir": "dist",
        "rootDir": "src"
    },
    "include": ["src/**/*"]
}
